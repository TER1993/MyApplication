<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"><!--添加这个属性-->

    <RadioButton
        android:visibility="gone"
        android:paddingTop="50dp"
        android:id="@+id/inventory_choose_rbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/change_inventory_time_tv"
            android:textSize="15sp"
            android:text="@string/_2016_01_02_17_51_12_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="10dp"
                android:id="@+id/change_inventory_name_tv"
                android:textSize="25sp"
                android:textColor="#000000"
                android:text="@string/b2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
