<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp"><!--添加这个属性-->

    <RadioButton
        android:id="@+id/inventory_choose_rbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:paddingTop="50dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/change_inventory_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_2016_01_02_17_51_12_"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/change_inventory_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/b2222"
            android:textColor="#000000"
            android:textSize="25sp" />

    </LinearLayout>


</LinearLayout>
