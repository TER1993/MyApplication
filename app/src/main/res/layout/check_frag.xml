<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="@string/tv_check_goods"
        />

        <Button
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="17sp"
            android:id="@+id/check_floor_btn"
            android:text="@string/tv_add_floor"
            android:background="@drawable/bg_alibuybutton"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:hint="@string/et_imput_scan"

            android:id="@+id/check_num_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <Button
            android:textSize="17sp"
            android:id="@+id/check_search_btn"
            android:text="@string/tv_search_c"
            android:background="@drawable/bg_alibuybutton"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            />
        <Button
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:id="@+id/check_save_btn"
            android:text="@string/tv_save"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_alibuybutton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/check_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>


</LinearLayout>
