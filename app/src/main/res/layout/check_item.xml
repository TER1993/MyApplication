<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/check_delete_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FF3030"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/tv_detele"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/check_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_goods_name"
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/_000000000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/check_price_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/_10"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/check_sub_tv"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.7"
            android:background="#000000"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/tv_sub_jian"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/check_sum_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/_1"
            android:textAlignment="center"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/check_add_tv"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.7"
            android:background="#000000"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/tv_add_jia"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>


</LinearLayout>
