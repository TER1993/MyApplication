<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.speedata.xu.myapplication.fragment.ReviseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_user_now"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/revise_username_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/admin_"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_old_pswd"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/revise_oldpassword_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEC8B"
                android:hint="@string/old_password"
                android:minHeight="30dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_new_pswd"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/revise_newpassword_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEC8B"
                android:hint="@string/new_password"
                android:minHeight="30dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_sure_new_pswd"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/revise_confirmpassword_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEC8B"
                android:hint="@string/new_password_again"
                android:minHeight="30dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <Button

            android:id="@+id/revise_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7CCD7C"
            android:padding="15dp"
            android:text="@string/btn_update"
            android:textSize="20sp" />

        <Button
            android:id="@+id/revise_back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#7CCD7C"
            android:padding="15dp"
            android:text="@string/btn_return"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
</FrameLayout>